<div class="page-header header-filter header-small" data-parallax="true" style="background-image: url('<%= asset_url('register.jpg') %>');">
  <div class="container">
    <div class="row">
      <div class="col-md-6 ml-auto mr-auto text-center">
        <h1 class="title">Sign up</h1>
      </div>
    </div>
  </div>
</div>
<div class="main main-raised">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-6 ml-auto mr-auto">
        <div class="card card-login">
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="card-body">
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="material-icons">face</i>
                  </span>
                </div>
                <%= f.text_field :name, :autofocus => true, class: "form-control", placeholder:"Full Name..." %>
              </div>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i class="material-icons">mail</i>
                  </span>
                </div>
                <%= f.email_field :email, class: "form-control", placeholder:"Email..." %>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">lock_outline</i>
                    </span>
                  </div>
                  <%= f.password_field :password, :autocomplete => "off", class: "form-control", placeholder:"Password..." %>
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">lock_outline</i>
                    </span>
                  </div>
                  <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Confirm Password..." %>
                </div>
              </div>
              <div class="form-group text-center">
                <%= f.submit "Sign up", class: "btn btn-primary btn-round" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
