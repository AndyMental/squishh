<div class="page-header header-filter header-small" data-parallax="true" style="background-image: url('<%= asset_url('sales-history.jpg') %>');">
  <div class="container">
    <div class="row">
      <div class="col-md-8 ml-auto mr-auto text-center">
        <h1 class="title">Sales History</h1>
        <br>
        <% if user_signed_in? %>
          <%= link_to 'New Listing', new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="main main-raised">
  <div class="container">
    <div class="table-responsive">
      <table class="table">
        <tr>
          <th class="center">Image</th>
          <th class="center">Item</th>
          <th class="center">Price</th>
          <th class="center">Customer</th>
          <th class="center">Date Sold</th>
        </tr>
        <% if @orders.size == 0 %>
          <tr>
            <td class="center" colspan="5">No Orders<br>
              <br>
              <br>
              <br>
            </td>
          </tr>
        <% end %>
        <% @orders.each do |order| %>
          <tr>
            <td class="center"><%= image_tag order.listing.image.url(:thumb) %></td>
            <td class="center"><%= order.listing.name %></td>
            <td class="center"><%= number_to_currency(order.listing.price) %></td>
            <td class="center"><%= order.buyer.name %></td>
            <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
<br>
